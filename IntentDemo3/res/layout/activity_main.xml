<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <Button
        android:id="@+id/button_explorer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_explorer"/>
    
    <Button
        android:id="@+id/button_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_phone"/>
    
    <Button
        android:id="@+id/button_maps"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:text="@string/button_maps"/>
    
    <Button 
        android:id="@+id/button_camera"
    	android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_camera"/>
    
    <Button 
        android:id="@+id/button_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_email"/>
    
</LinearLayout>
